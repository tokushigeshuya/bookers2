<h2>User info</h2>
<%= form_with model: @user, local: true do |f| %>
  <label for="inputName">Name</label></br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <label for="inputImage">ProfileImage</label></br>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></br>  
  <label for="introduction">introduction</label></br>
  <%= f.text_area :introduction, autofocus: true, id:"introduction", placeholder:"自己紹介"%>
  <%= f.submit "変更を保存" %>
<% end %>
<div class='container'>
  <div class="row">
    <div class="col-lg-3">
     </div>
	    <div class="col-lg-6">
        <% if @user.errors.any? %>
          <div class=errors>
          <%= @user.errors.count %>件のerrorsが発生しました
          </div>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
          <% end %>


        <h2>User info</h2>
        <%= form_with model: @user, local: true do |f| %>
          <label for="inputName">Name</label></br>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
          <label for="inputImage">ProfileImage</label></br>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></br>
          <label for="introduction">introduction</label></br>
          <%= f.text_area :introduction, autofocus: true, id:"introduction", placeholder:"自己紹介"%><br>
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        <% end %>
       </div>
      <div class="col-lg-3">
    </div>
  </div>
</div>
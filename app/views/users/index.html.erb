
<div class="container">  <!-- この行を追加 -->
  <div class="row">      <!-- この行を追加 -->
    <div class="col-lg-3">
    <%= render 'user', user: @user %>
    <%= render 'books/book', book: @book %>
    </div>
    <div class="col-lg-9">
      <h1>Users</h1>
    <table class="table table-striped">
    <thead>
    <tr>
    <th>image</th>
    <th>name</th>
    </tr>
  </thead>
    <tr>
      <% @users.each do |user| %>
      <td><%= image_tag user.get_image %></td>
      <td><%= user.name %></td>
      <td><%= link_to "Show", user_path(@user.id) %></td>
      <% end %>
      </tr>

      </table>
    </div>
  </div>
</div>
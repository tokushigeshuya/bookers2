<div class='container'>
  <div class="row">
   <div class="col-lg-3">
   </div>
	  <div class="col-lg-6">

    <% if @book.errors.any? %>
      <div class=errors>
      <%= @book.errors.count %>件のerrorsが発生しました
      </div>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>


    <h1>Editing Book</h1>

    <%= form_with model: @book, local: true do |f| %>
    <p>title</p>
      <%= f.text_field :title %>

      <p>Opinion</p>
      <%= f.text_area :body %><br>

      <%= f.submit 'Update Book', class: "btn btn-secondary" %>

    <% end %>
    <%= link_to 'Show', book_path %>
    |
    <%= link_to 'Back', books_path %>

  </div>
  <div class="col-lg-3">
  </div>
 </div>
</div>
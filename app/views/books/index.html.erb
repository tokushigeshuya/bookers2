<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<div class="container">  <!-- この行を追加 -->
  <div class="row">      <!-- この行を追加 -->
    <div class="col-lg-3">
    <%= render 'users/user', user: current_user %>
    <%= render 'book', book: @book %>
    </div>
    <div class="col-lg-9">
      <h1>Books</h1>
    <table class="table table-striped">
    <thead>
    <tr>
    <th></th>
    <th>title</th>
    <th>body</th>
    </tr>
  </thead>


    <% @books.each do |book| %>
    <tr>

        <td><%= link_to user_path(book.user_id) do %>
        <%= image_tag book.user.get_image %></td>
        <% end %>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      <% end %>
    </tr>

      </table>
    </div>
  </div>
</div>



<div class="container">  <!-- この行を追加 -->
  <div class="row">      <!-- この行を追加 -->
    <div class="col-lg-3">
    <%= render 'users/user', user: @user %>
    <%= render 'book', book: @book %>
    </div>
    <div class="col-lg-9">
      <h1>Books</h1>
    <table class="table table-striped">
    <thead>
    <tr>
    <th>title</th>
    <th>body</th>
    </tr>
  </thead>


    <% @books.each do |books| %>
    <tr>

        <td><%= link_to user_path(books.user_id) do %>
        <%= image_tag books.user.get_image %></td>
        <% end %>
        <td><%= books.title %></td>
        <td><%= books.body %></td>
      <% end %>
    </tr>

      </table>
    </div>
  </div>
</div>
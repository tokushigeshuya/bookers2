
<div class="container">  <!-- この行を追加 -->
  <div class="row">      <!-- この行を追加 -->
    <div class="col-md-3">
    <%= render 'users/user', user: @users %>
    <%= render 'book', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
    <table class="table table-hover table-inverse">
      <tr>
          <td><%= image_tag @user.get_image %>
          <p class="pl-4"><%= link_to @users.name, user_path(@users) %><p>
            </td>
          <td><%= link_to @book_new.title, book_path(@book_new.id) %></td>
          <td><%= @book_new.body %></td>
          <% if @book_new.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book_new), class: "btn btn-success " %></td>
            <td><%= link_to "Destroy", book_path(@book_new), method: :delete, data: { confirm: '削除しますか？' }, class: "btn btn-danger" %></td>
          <% end %>
      </tr>
    </table>
    </div>
  </div>
</div>
